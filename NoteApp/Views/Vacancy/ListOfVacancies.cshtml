@using NoteApp.Extensions
@model NoteApp.Models.VacancyListViewModel
@{
    ViewBag.Title = "Вакансии";
}
<h2 style="display:inline-block; margin-bottom:0px">@ViewBag.Title</h2>
@using (Html.BeginForm("Index", "Vacancy", FormMethod.Get, new { @class = "form-inline pull-right", style = "margin-top:20px" }))
{
    <div class="form-group">
        <input placeholder="Найти по компаниям..." name="SearchQuery" type="text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Найти</button>
}
<hr />
@if (Model.Vacancies.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.SortLink("Название", "Name")</th>
                <th>@Html.SortLink("Компания", "Company")</th>
                <th>@Html.SortLink("Зарплата", "Salary")</th>
                <th>@Html.SortLink("Требования", "Requirments")</th>
            </tr>
        </thead>
        <tbody>
            @Html.DisplayFor(model => model.Vacancies)
        </tbody>
    </table>
}
else
{
    <p class="text-center">Вакансий нет</p>
}